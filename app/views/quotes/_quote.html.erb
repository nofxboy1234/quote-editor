<%= turbo_frame_tag quote do %>
  <div class='quote'>
    <%= link_to quote.name,
                quote_path(quote),
                data: { turbo_frame: '_top' } %>
    <div class='quote__actions'>
      <%= button_to "Delete",
                    quote_path(quote),
                    method: :delete,
                    data: { turbo: false },
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_quote_path(quote),
                  data: { turbo: false },
                  class: 'btn btn--light' %>

    </div>
  </div>
<% end %>